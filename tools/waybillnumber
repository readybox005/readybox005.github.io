<body>
    <!-- 左侧：快递单号模块 -->
    <div class="module" id="express-module">
        <h2>快递单号条形码</h2>
        <div class="input-group">
            <label for="express-code">请输入快递单号</label>
            <input 
                type="text" 
                id="express-code" 
                placeholder="例如：8702552633、8702552634"
                autocomplete="off"
            >
        </div>
        <!-- 调整按钮顺序：DHL按钮在最上方，Waybill按钮在下方并排 -->
        <div class="btn-group">
            <button class="dhl-query-btn" id="dhl-query-btn" disabled>DHL官网查询</button>
            <div class="waybill-btn-wrap">
                <button class="jump-btn btn1" id="jump-btn1" disabled>Waybill Number 1 条形码</button>
                <button class="jump-btn btn2" id="jump-btn2" disabled>Waybill Number 2 条形码</button>
            </div>
        </div>
        <p class="tip">输入单号后点击对应按钮，自动跳转到指定页面</p>
        <!-- 优化示例排版：改用列表+背景框 -->
        <div class="example">
            <ul>
                <li>示例1：输入8702552633 → 点击DHL官网查询跳转至 https://www.dhl.com/cn-zh/home/tracking.html?tracking-id=8702552633&submit=1&inputsource=marketingstage</li>
                <li>示例2：输入8702552633 → 点击Btn1跳转至 https://t-x-m.com/indexbarcode.asp?bc1=8702552633&bc2=10&bc3=419&bc4=89&bc9=3&bc5=22&bc6=11&bc7=Arial&bc8=15</li>
                <li>示例3：输入8702552633 → 点击Btn2跳转至 https://t-x-m.com/indexbarcode.asp?bc1=8702552633&bc2=10&bc3=339&bc4=67&bc9=3&bc5=22&bc6=11&bc7=Arial&bc8=15</li>
            </ul>
        </div>
    </div>

    <!-- 右侧：JD Number模块（替换为警示文字） -->
    <div class="module" id="jd-module">
        <h2>JD Number</h2>
        <div class="input-group">
            <label for="jd-code">请输入JD Number</label>
            <input 
                type="text" 
                id="jd-code" 
                placeholder="例如：JD014600012483124747"
                autocomplete="off"
            >
        </div>
        <div class="jd-container">
            <!-- 替换为闪烁警示文字 -->
            <div class="warning-dhl">注意！！！ DHL 的发件日期 ！！</div>
            <button class="jd-btn" id="jd-jump-btn" disabled>JD Number条形码</button>
        </div>
        <p class="tip">输入JD单号后点击按钮，自动跳转到对应的条形码生成页</p>
        <!-- 优化示例排版：改用列表+背景框 -->
        <div class="example">
            <ul>
                <li>示例：输入JD014600012483124747 → 跳转至 https://t-x-m.com/indexbarcode.asp?bc1=JJD014600012483124747&bc2=10&bc3=691&bc4=211&bc9=3&bc5=22&bc6=11&bc7=Arial&bc8=15</li>
            </ul>
        </div>
    </div>

    <script>
        // ---------------------- 核心DOM元素 ----------------------
        const codeInput = document.getElementById('express-code');
        const jumpBtn1 = document.getElementById('jump-btn1');
        const jumpBtn2 = document.getElementById('jump-btn2');
        const dhlQueryBtn = document.getElementById('dhl-query-btn');
        const jdInput = document.getElementById('jd-code');
        const jdJumpBtn = document.getElementById('jd-jump-btn');

        // ---------------------- 固定参数配置 ----------------------
        const FIXED_PARAMS1 = 'bc2=10&bc3=419&bc4=89&bc9=3&bc5=22&bc6=11&bc7=Arial&bc8=15'; // Waybill1参数
        const FIXED_PARAMS2 = 'bc2=10&bc3=339&bc4=67&bc9=3&bc5=22&bc6=11&bc7=Arial&bc8=15';   // Waybill2参数
        const JD_FIXED_PARAMS = 'bc2=10&bc3=691&bc4=211&bc9=3&bc5=22&bc6=11&bc7=Arial&bc8=15';
        const BASE_URL = 'https://t-x-m.com/indexbarcode.asp?';
        const DHL_TRACK_URL = 'https://www.dhl.com/cn-zh/home/tracking.html?tracking-id=';

        // ---------------------- 输入监听逻辑 ----------------------
        // 快递单号输入监听（同步启用/禁用所有相关按钮）
        codeInput.addEventListener('input', function() {
            const code = this.value.trim();
            const isEnabled = code !== '';
            jumpBtn1.disabled = !isEnabled;
            jumpBtn2.disabled = !isEnabled;
            dhlQueryBtn.disabled = !isEnabled;
        });

        // JD单号输入监听
        jdInput.addEventListener('input', function() {
            const code = this.value.trim();
            jdJumpBtn.disabled = code === '';
        });

        // ---------------------- DHL官网查询（仅跳转，无填充） ----------------------
        dhlQueryBtn.addEventListener('click', function() {
            const expressCode = codeInput.value.trim();
            if (!expressCode) {
                alert('请输入有效的快递单号！');
                return;
            }
            // 仅跳转DHL官网查询链接
            const dhlFullUrl = `${DHL_TRACK_URL}${expressCode}&submit=1&inputsource=marketingstage`;
            window.open(dhlFullUrl, '_blank');
        });

        // ---------------------- Waybill条形码跳转逻辑 ----------------------
        function jumpToBarcode(params) {
            const expressCode = codeInput.value.trim();
            if (!expressCode) {
                alert('请输入有效的快递单号！');
                return;
            }
            const fullUrl = `${BASE_URL}bc1=${expressCode}&${params}`;
            window.open(fullUrl, '_blank');
        }
        jumpBtn1.addEventListener('click', () => jumpToBarcode(FIXED_PARAMS1));
        jumpBtn2.addEventListener('click', () => jumpToBarcode(FIXED_PARAMS2));

        // ---------------------- JD单号跳转逻辑 ----------------------
        jdJumpBtn.addEventListener('click', function() {
            const jdCode = jdInput.value.trim();
            if (!jdCode) {
                alert('请输入有效的JD Number！');
                return;
            }
            const bc1Value = `J${jdCode}`;
            const fullUrl = `${BASE_URL}bc1=${bc1Value}&${JD_FIXED_PARAMS}`;
            window.open(fullUrl, '_blank');
        });

        // ---------------------- 页面初始化 ----------------------
        jumpBtn1.disabled = true;
        jumpBtn2.disabled = true;
        dhlQueryBtn.disabled = true;
        jdJumpBtn.disabled = true;
        codeInput.focus();
    </script>
</body>
</html>
